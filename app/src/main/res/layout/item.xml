<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Product Name"
        android:id="@+id/iName"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/iLayoutH">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/qtyLayoutH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Half: "
                android:textStyle="bold"
                android:id="@+id/textView5" />

            <Button
                android:id="@+id/iMinusBtnH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:textColor="#fff"
                android:backgroundTint="@color/colorAccent"
                android:text="-"
                style="?android:attr/buttonStyleSmall" />

            <TextView
                android:id="@+id/iLiQtyH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:text="1" />

            <Button
                android:id="@+id/iPlusBtnH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:textColor="#fff"
                android:backgroundTint="@color/colorAccent"
                android:text="+"
                style="?android:attr/buttonStyleSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemPriceH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.0dip"
            android:layout_toRightOf="@id/qtyLayoutH"
            android:layout_alignBottom="@id/qtyLayoutH"
            android:text="Half-Price"/>

        <TextView
            android:id="@+id/itemAmtH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/itemPriceH"
            android:layout_alignParentRight="true"
            android:text="Half-Amount"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/iLayoutF">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/qtyLayoutF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full:  "
                android:textStyle="bold"
                android:id="@+id/textView6" />

            <Button
                android:id="@+id/iMinusBtnF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:textColor="#fff"
                android:backgroundTint="@color/colorAccent"
                android:text="-"
                style="?android:attr/buttonStyleSmall" />

            <TextView
                android:id="@+id/iLiQtyF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:text="1" />

            <Button
                android:id="@+id/iPlusBtnF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:textColor="#fff"
                android:backgroundTint="@color/colorAccent"
                android:text="+"
                style="?android:attr/buttonStyleSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemPriceF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.0dip"
            android:layout_toRightOf="@id/qtyLayoutF"
            android:layout_alignBottom="@id/qtyLayoutF"
            android:text="Full-Price"/>

        <TextView
            android:id="@+id/itemAmtF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/itemPriceF"
            android:layout_alignParentRight="true"
            android:text="Full-Amount"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#9E9E9E"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totAmt"
        android:text="Total Amount"
        android:layout_gravity="right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#9E9E9E"/>

</LinearLayout>
